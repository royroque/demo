begin
  require 'rake'
  require 'rspec/core/rake_task'

  desc "Run Demo Test Suite"
  RSpec::Core::RakeTask.new(:demo) do |t|
    STDOUT.sync = true
    t.fail_on_error = false
    product = 'demo'
    t.pattern = Dir.glob("spec/**/#{product}_spec.rb")
     #t.rspec_opts = "--format documentation  --out ./logs/#{product}.log"
    t.rspec_opts = "--color --tty --format documentation --format html --out ./logs/#{product}.html --require yarjuf --format JUnit  --out ./logs/#{product}.xml"
  end
  
  task :default => [:demo]
  
rescue LoadError
  puts "rspec available"
end

